<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gametebakanjava.MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:src="@drawable/logo"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_payungteduh"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/payungteduh"
                android:background="@color/birupastel"/>


            <ImageView
                android:id="@+id/imageView_panturas"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/panturas"
                android:background="@color/ijo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_noah"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/noah"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:background="@color/hitam"/>

            <ImageView
                android:id="@+id/imageView_erk"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/erk"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:background="@color/pinkmuda"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>